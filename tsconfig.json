{
  "include": ["src/**/*", "tests/**/*"],
  "compilerOptions": {
    "strict": true,
    "target": "ES2021",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "noImplicitOverride": true
  }
}
